= form_tag autenticate_path do
  %p
    = label_tag :username, User.human_attribute_name('name')
    = text_field_tag :username

  %p
    = label_tag :password, User.human_attribute_name('password')
    = password_field_tag :password

  %p= submit_tag t('login'), :name => 'login'

%p
  = link_to t('user.create_account'), new_user_path
  %br
  = link_to t('user.idAndOrPasswordLost'), user_edit_password_path
