<% form_tag autenticate_path do %>
	<p>
		<%= label :user_session, User.human_attribute_name('name') %>
		<%= text_field_tag :username %>
	</p>
	<p>
		<%= label :user_session, User.human_attribute_name('password') %>
		<%= password_field_tag :password %>
	</p>
	<p>
		<%= button_to t('login') %>
	</p>
<% end %>

<p>
	<%= link_to t('user.create_account'), new_user_path %>
</p>
