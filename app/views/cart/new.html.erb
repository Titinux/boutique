<% form_tag cart_index_path do %>
	<p><%= label_tag :quantity,  t('cart.quantity') %>
	<%= text_field_tag :quantity %></p>
	
	<p><%= hidden_field_tag :asset_id, @asset.id %></p>

	<p><%= submit_tag t('cart.add_and_continue_shopping'), :name => 'add_and_continue_shopping' %>
	<%= submit_tag t('cart.add_and_view_cart'), :name => 'add_and_view_cart' %></p>
<% end %>
