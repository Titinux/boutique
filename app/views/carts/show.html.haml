= content_title t('cart.showing', :name => @cart.name)

%p
  = link_to_edit edit_cart_path(@cart)
  = link_to_destroy cart_path(@cart)

= show_for @cart do |c|
  = c.attribute :name

= render :partial => 'cart_lines/table', :locals => { :cart => @cart }

- unless @cart.lines.empty?
  %p= link_to t('order.makeOrder'), new_user_order_path(:cart_id => @cart.id)

= content_for :sidebar do
  = render_cell :widget, :carts
