= frame :title => t('order.commandId', :id => @order.id) do
  = show_for @order do |o|
    = o.attribute :state do
      = orderStatusHash[@order.state]

    = o.attribute :totalAmount do
      = number_to_currency(@order.totalAmount, unit: 'K', precision: 0)

    = o.attribute :comment

  = frame :title => t('order.details') do
    = render :partial => 'order_lines_table', :locals => { :order => @order }

  - if @order.state == 'WAIT_ESTIMATE_VALIDATION'
    = link_to orderActionHash['ACCEPT_ESTIMATE'], user_order_path(@order, :op => 'ACCEPT_ESTIMATE'), :method => :put
    |
    = link_to orderActionHash['REFUSE_ESTIMATE'], user_order_path(@order, :op => 'REFUSE_ESTIMATE'), :method => :put

  = link_to_back user_orders_path
