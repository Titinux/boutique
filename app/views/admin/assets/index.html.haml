= content_title t('asset.listing')

%p.filter
  = simple_form_for([:admin, @search]) do |f|
    = f.input :name_contains, :label => Asset.human_attribute_name(:name), :required => false
    = f.input :category_name_equals, :label => Category.model_name.human, :required => false

    .buttons
      = f.button :submit, t('helpers.submit.search')

= paginate @assets
= render :partial => 'table', :locals => { :assets => @assets }
= paginate @assets

%br
= link_to_add new_admin_asset_path, :text => t('asset.new'), :format => :long
