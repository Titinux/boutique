= content_title t('asset.showing', :name => @asset.name)

= show_for @asset do |a|
  = a.attribute :name
  = a.association :category
  = a.attribute :pictureUri do
    = image_tag(@asset.pictureUri, :alt => t('pictureOf', :subject => @asset.name)) unless @asset.pictureUri.blank?

  = a.attribute :unitaryPrice
  = a.attribute :floatPrice

= link_to_back admin_assets_path
= link_to_edit edit_admin_asset_path(@asset)
