%p
  = Asset.human_attribute_name('name')
  \:
  = @asset.name

%p
  = Asset.human_attribute_name('category')
  \:
  = @asset.category.name

%p
  = t('picture')
  \:
  = image_tag(@asset.pictureUri, :alt => t('pictureOf', :subject => @asset.name)) unless @asset.pictureUri.blank?

%p
  = Asset.human_attribute_name('unitaryprice')
  \:
  = @asset.unitaryPrice

%p
  = Asset.human_attribute_name('floatprice')
  \:
  = @asset.floatPrice

= link_to_back admin_assets_path
= link_to_edit edit_admin_asset_path(@asset)
