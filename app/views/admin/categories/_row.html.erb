<tr class="<%= cycle('even', 'odd')%>">
  <td><%=h category.name %></td>
	<td><%=h(category.parent.name) if category.parent %></td>
	<td><%=h category.pictureUri %></td>
  <td>
  	<%= link_to t('show'), [:admin, category] %> |
  	<%= link_to t('edit'), edit_admin_category_path(category) %> |
  	<%= link_to t('destroy'), [:admin, category], :confirm => t('destroy_confirm'), :method => :delete %>
	</td>
</tr>
