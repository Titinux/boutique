%table
  %thead
    %tr
      %th= sort_link @q, :id
      %th= sort_link @q, :user_name, User.model_name.human
      %th= Order.human_attribute_name :state
      %th= Order.human_attribute_name :totalAmount
      %th= sort_link @q, :updated_at
      %th= t('action').pluralize

  %tbody
    - orders.each do |order|
      %tr{ :class => "#{cycle('even', 'odd')}" }
        %td= order.id
        %td= link_to order.user.name, [:admin, order.user], :title => order.user.dofusNicknames
        %td= orderStatusHash[order.state]
        %td.currency= number_to_currency(order.totalAmount, unit: 'K', precision: 0)
        %td.date= l(order.updated_at)
        %td.actions
          = link_to_show admin_order_path(order)
          = link_to_edit edit_admin_order_path(order)
          = link_to_destroy admin_order_path(order)
