<h1>Listing orders</h1>

<table>
  <tr>
    <th>User</th>
    <th>State</th>
  </tr>

<% for order in @orders %>
  <tr>
    <td><%=h order.user.name %></td>
    <td><%=h order.state %></td>
    <td><%= link_to 'Show', [:admin, order] %></td>
    <td><%= link_to 'Edit', edit_admin_order_path(order) %></td>
    <td><%= link_to 'Destroy', [:admin, order], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New order', new_admin_order_path %>
