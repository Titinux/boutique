<table>
  <thead>
		<tr>
			<th><%= Order.human_attribute_name('id') %></th>
			<th><%= User.human_attribute_name('name') %></th>
			<th><%= Order.human_attribute_name('state') %></th>
			<th><%= Order.human_attribute_name('totalAmount') %></th>
		</tr>
	</thead>
	<tbody>
		<% orders.each do |order| -%>
			<%= render :partial => 'row', :locals => { :order => order } %>
		<% end -%>
	</tbody>
</table>
