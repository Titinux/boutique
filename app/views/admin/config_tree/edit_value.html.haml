%h2 Editing config element

- form_for([:admin, @configElement]) do |f|
  = f.error_messages

  - if @configElement.form_kind == 'string'
  %p
    = f.label :value
    = f.text_field :value

  - if @configElement.form_kind == 'select'
  %p
    = f.label :value
    = f.collection_select(:value, @configElement.configValues, :name, :name)

  -  if @configElement.form_kind == 'radio'
    - @configElement.configValues.each do |configValue|
      = f.radio_button :value, configValue.name
      = configValue.name
      %br

  %p= f.submit "Update"

= link_to 'Back', admin_config_tree_index_path

