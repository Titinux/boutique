= sidebar do
  = link_to_add new_admin_administrator_path, text: t('administrator.new'), format: :long

= content_title t('administrator.listing')

#administrator-filter.accordion
  .accordion-group
    .accordion-heading
      %a.accordion-toggle{ href: '#collapseOne', data: { toggle: 'collapse', parent: '#administrator-filter' }}
        %i.imoon-filter
        Filter

    #collapseOne.accordion-body.collapse
      .accordion-inner
        = simple_form_for(@q, url: admin_administrators_path, method: :get, html: { novalidate: true }) do |f|
          = f.input :name_cont,  label: Administrator.human_attribute_name(:name), required: false
          = f.input :email_cont, label: Administrator.human_attribute_name(:email), required: false

          .form-actions
            = f.button :submit, t('helpers.submit.search'), class: 'btn btn-primary'

= paginate @administrators
= render partial: 'admin/administrators/table', locals: { administrators: @administrators }
= paginate @administrators
