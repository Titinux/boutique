%table
  %thead
    %tr
      %th= sort_link @q, :id
      %th= sort_link @q, :level
      %th= sort_link @q, :user, User.model_name.human
      %th= sort_link @q, :action
      %th= sort_link @q, :objectType
      %th= sort_link @q, :objectId
      %th= sort_link @q, :created_at
      %th= t('action').pluralize

  %tbody
    - @logs.each do |log|
      %tr{ :class => "#{cycle('even', 'odd')}" }
        %td= log.id
        %td= log.level
        %td= log.user
        %td= log.action
        %td= log.objectType
        %td= log.objectId
        %td= l(log.created_at)
        %td.actions
          = link_to_show admin_log_path(log)
