%table
  %thead
    %tr
      %th= sort_link @search, :user_name, User.model_name.human
      %th= sort_link @search, :asset_name, Asset.model_name.human
      %th= sort_link @search, :asset_category_name, Category.model_name.human
      %th= sort_link @search, :quantity

  %tbody
    - deposits.each do |deposit|
      %tr{ :class => "#{cycle('even', 'odd')}" }
        %td= deposit.user.name
        %td= deposit.asset.name
        %td= deposit.asset.category.name
        %td.number= number_with_delimiter(deposit.quantity)
        %td.actions
          - unless deposit.validated
            = link_to t('deposit.validate'), validate_admin_deposit_path(deposit), :method => :put
            = link_to t('deposit.refuse'), admin_deposit_path(deposit), :confirm => t('destroy_confirm'), :method => :delete
