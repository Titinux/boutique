!!! 5
%html{ lang: I18n.locale.to_s }
  %head
    %meta{ charset: 'utf-8' }

    %link{ :rel => 'icon', :type => 'image/png', :href => "#{image_path('global/favicon.png')}"}
    = csrf_meta_tags

    %title Boutique - Admin panel

    = stylesheet_link_tag 'admin.css'

  %body
    #global{:class => [controller.controller_name, controller.action_name]}
      #header
        %h1 Admin Panel

      #topbar.admin
        = makeMenu('admin')

      #center
        = render_flash_messages

        - if content_for?(:content_title)
          = yield :content_title

        - if content_for?(:sidebar)
          #content
            = yield

          #sidebar
            = yield :sidebar
        - else
          = yield

      #footer
        = t('footerText')

    - if content_for?(:jstemplates)
      = javascript_tag do
        = yield(:jstemplates)

    = javascript_include_tag 'application'
