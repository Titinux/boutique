secret_token: '<%= app_config_secret_token %>'
secret_key_base: '<%= app_config_secret_key_base %>'

production:
  action_mailer:
    delivery_method: <%= app_config_mailer_delivery_method %>
    raise_delivery_errors: <%= app_config_mailer_raise_delivery_errors %>

    default_url_options:
      :host: '<%= app_config_mailer_default_options_host %>'

    smtp_settings:
      :address:              '<%= app_config_mailer_smtp_address %>'
      :domain:               '<%= app_config_mailer_smtp_domain %>'
      :port:                 <%= app_config_mailer_smtp_port %>
      :authentication:       '<%= app_config_mailer_smtp_authentication %>'
      :enable_starttls_auto: <%= app_config_mailer_smtp_startttls_auto %>
      :user_name:            '<%= app_config_mailer_smtp_user_name %>'
      :password:             '<%= app_config_mailer_smtp_password %>'

staging:
  action_mailer:
    delivery_method: <%= app_config_mailer_delivery_method %>
    raise_delivery_errors: <%= app_config_mailer_raise_delivery_errors %>

    default_url_options:
      :host: '<%= app_config_mailer_default_options_host %>'

    smtp_settings:
      :address:              '<%= app_config_mailer_smtp_address %>'
      :domain:               '<%= app_config_mailer_smtp_domain %>'
      :port:                 <%= app_config_mailer_smtp_port %>
      :authentication:       '<%= app_config_mailer_smtp_authentication %>'
      :enable_starttls_auto: <%= app_config_mailer_smtp_startttls_auto %>
      :user_name:            '<%= app_config_mailer_smtp_user_name %>'
      :password:             '<%= app_config_mailer_smtp_password %>'
