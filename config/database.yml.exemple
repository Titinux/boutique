common: &common
  adapter: mysql
  encoding: utf8
  reconnect: false
  pool: 5
  username: <my_username>
  password: <my_password>
  socket: /var/run/mysqld/mysqld.sock

development:
  <<: *common
  database: boutique_dev

production:
  <<: *common
  database: boutique

test: &test
  <<: *common
  database: boutique_test

cucumber:
  <<: *test
